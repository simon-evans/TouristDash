<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.simonevans.touristdash.library">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name="MainMenu" android:screenOrientation="portrait" android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="org.simonevans.touristdash.library.MAINMENU" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
		<activity android:name="TouristDashContinuous"  android:screenOrientation="portrait" android:theme="@android:style/Theme.NoTitleBar">
        	<intent-filter>
        		<category android:name="android.intent.category.DEFAULT" />
        		<action android:name="org.simonevans.touristdash.library.CONT_GAME" />
        	</intent-filter>
        </activity>
        <activity android:name="HelpScreen" android:screenOrientation="portrait" android:theme="@android:style/Theme.NoTitleBar">
			<intent-filter>
				<action android:name="org.simonevans.touristdash.library.HELPSCREEN" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="HighscoresScreen" android:screenOrientation="portrait" android:theme="@android:style/Theme.NoTitleBar">
			<intent-filter>
				<action android:name="org.simonevans.touristdash.library.HIGHSCORES" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="org.simonevans.touristdash.library.TouristDashWave" android:screenOrientation="portrait" android:theme="@android:style/Theme.NoTitleBar">
			<intent-filter>
				<action android:name="org.simonevans.touristdash.library.WAVEGAME" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="org.simonevans.touristdash.library.StatisticsScreen" android:screenOrientation="portrait" android:theme="@android:style/Theme.NoTitleBar">
			<intent-filter>
				<action android:name="org.simonevans.touristdash.library.STATISTICS" />
				<category android:name="android.intent.category.DEFAULT" />			
			</intent-filter>
		</activity>
		<activity android:name="org.simonevans.touristdash.library.UpgradesActivity" android:screenOrientation="portrait" android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
			<intent-filter>
				<action android:name="org.simonevans.touristdash.library.UPGRADES" />
				<category android:name="android.intent.category.DEFAULT" />			
			</intent-filter>
		</activity>
		<activity android:name="org.simonevans.touristdash.library.menus.OptionsActivity" android:screenOrientation="portrait" android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
			<intent-filter>
				<action android:name="org.simonevans.touristdash.library.OPTIONS" />
				<category android:name="android.intent.category.DEFAULT" />			
			</intent-filter>
		</activity>
    </application>
    <uses-sdk android:minSdkVersion="3" />

</manifest> 